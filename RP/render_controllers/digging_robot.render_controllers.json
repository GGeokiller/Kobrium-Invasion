{
    "format_version": "1.20.80",
    "render_controllers": {
        "controller.render.digging_robot": {
            "geometry": "Geometry.default",
            "materials": [
                {
                    "*": "Material.default"
                }
            ],
            "textures": [
                "Texture.default"
            ],
            "overlay_color": {
                "r": 1,
                "g": 1,
                "b": 1,
                //esto da el efecto de encendido de la tnt
                //multiplicar por 720 aumenta el valor por lo que oscilara con mayor frecuencia
                "a": "(q.property('eu:is_lit') == true && math.sin(q.life_time*720 ) > 0.0) ? 0.6 : 0"
            }
        }
    }
}