{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "koprium:koprium_heal",
			"basic_render_parameters": {
				"material": "particles_add",
				"texture": "textures/particle/koprium_heal"
			}
		},
		"components": {
			"minecraft:emitter_initialization": {
				"creation_expression": "variable.width;variable.height;"
			},
			"minecraft:emitter_rate_instant": {
				"num_particles": 40
			},
			"minecraft:emitter_lifetime_once": {
				"active_time": 1
			},
			"minecraft:emitter_shape_box": {
				"offset": [0, "variable.height/2", 0],
				"half_dimensions": ["(variable.width/2) * 1.25", "(variable.height/2) * 1.25", "(variable.width/2) * 1.25"],
				"direction": [0, 1, 0]
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": "math.random(0.25, 1.25)"
			},
			"minecraft:particle_initial_speed": "math.random(0.25, 1.25)",
			"minecraft:particle_motion_dynamic": {},
			"minecraft:particle_appearance_billboard": {
				"size": ["0.2  - (variable.particle_age/variable.particle_lifetime) * 0.2", 0.4],
				"facing_camera_mode": "rotate_xyz"
			},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "v.particle_age / v.particle_lifetime",
					"gradient": {
						"0.0": "#0008FF00",
						"0.5": "#FF03FF00",
						"1.0": "#0010FF00"
					}
				}
			}
		}
	}
}