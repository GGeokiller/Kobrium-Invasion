{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "koprium:detect_player",
			"basic_render_parameters": {
				"material": "particles_add",
				"texture": "textures/particle/bloom"
			}
		},
		"components": {
			"minecraft:emitter_initialization": {
				"per_update_expression": "variable.scaling = 50;"
			},
			"minecraft:emitter_rate_instant": {
				"num_particles": 300
			},
			"minecraft:emitter_lifetime_looping": {
				"active_time": 6
			},
			"minecraft:emitter_shape_point": {},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": 1
			},
			"minecraft:particle_motion_parametric": {
				"relative_position": ["math.sin(v.particle_random_1*360)*math.sin(v.particle_random_2*360) * variable.particle_age * variable.scaling", "math.cos(v.particle_random_1*360)  * variable.particle_age * variable.scaling", "math.sin(v.particle_random_1*360)*math.cos(v.particle_random_2*360)  * variable.particle_age * variable.scaling"]
			},
			"minecraft:particle_appearance_billboard": {
				"size": ["1 * variable.particle_age * variable.scaling * (0.25 + variable.particle_random_3 - 0.5)", "1 * variable.particle_age * variable.scaling * (0.25 + variable.particle_random_3 - 0.5)"],
				"facing_camera_mode": "direction_z",
				"direction": {
					"mode": "custom",
					"custom_direction": ["math.sin(v.particle_random_1*360)*math.sin(v.particle_random_2*360)", "math.cos(v.particle_random_1*360)", "math.sin(v.particle_random_1*360)*math.cos(v.particle_random_2*360)"]
				}
			},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "v.particle_age / v.particle_lifetime",
					"gradient": {
						"0.0": "#FF0019FF",
						"0.67": "#FF3541FF",
						"1.0": "#00003EFF"
					}
				}
			}
		}
	}
}
