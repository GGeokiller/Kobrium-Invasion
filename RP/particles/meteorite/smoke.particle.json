{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "koprium:meteorite_smoke",
			"basic_render_parameters": {
				"material": "particles_blend",
				"texture": "textures/particle/smoke"
			}
		},
		"components": {
			"minecraft:emitter_rate_instant": {
				"num_particles": 300
			},
			"minecraft:emitter_lifetime_once": {
				"active_time": 10
			},
			"minecraft:emitter_shape_point": {
				"direction": ["(variable.particle_random_2 - 0.5)", "(variable.particle_random_4 - 0.85)/6", "(variable.particle_random_1 - 0.5)"]
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": "(1-variable.particle_random_3) * 30"
			},
			"minecraft:particle_initial_spin": {
				"rotation": "math.random(-360, 360)",
				"rotation_rate": "math.random(-360, 360)/10"
			},
			"minecraft:particle_initial_speed": "(0.8-variable.particle_random_3) * 30",
			"minecraft:particle_motion_dynamic": {
				"linear_drag_coefficient": "0.25*3"
			},
			"minecraft:particle_appearance_billboard": {
				"size": ["variable.particle_random_3*3", "variable.particle_random_3*3"],
				"facing_camera_mode": "rotate_xyz",
				"uv": {
					"texture_width": 16,
					"texture_height": 192,
					"flipbook": {
						"base_UV": [0, 64],
						"size_UV": [16, 16],
						"step_UV": [0, 16],
						"frames_per_second": 1,
						"max_frame": 8,
						"stretch_to_lifetime": true
					}
				}
			},
			"minecraft:particle_motion_collision": {
				"collision_drag": 10,
				"collision_radius": 0.1
			},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "v.particle_age / v.particle_lifetime",
					"gradient": {
						"0.0": "#00BEB278",
						"0.09": "#FFBEB478",
						"1.0": "#00BEB978"
					}
				}
			}
		}
	}
}